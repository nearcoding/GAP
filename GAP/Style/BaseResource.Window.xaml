<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type Window}" x:Key="WindowDialog">
        <Setter Property="WindowState" Value="Normal"></Setter>
        <Setter Property="WindowStyle" Value="ToolWindow"></Setter>
        <Setter Property="ResizeMode" Value="NoResize"></Setter>             
    </Style>

    <Style TargetType="{x:Type Window}" x:Key="WindowDialogResize" BasedOn="{StaticResource WindowDialog}">        
        <Setter Property="ResizeMode" Value="CanResizeWithGrip"></Setter>
    </Style>

</ResourceDictionary>