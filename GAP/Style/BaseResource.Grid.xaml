<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="GridBackgroundSearchSection" TargetType="Grid">
        <Setter Property="Background" Value="#3c4c5f"/>
        <Setter Property="Height" Value="35"/>
    </Style>

    <Style x:Key="MinHeightRowDefinition" TargetType="RowDefinition">
        <Setter Property="Height" Value="10" />
    </Style>
    <Style x:Key="MaxHeightRowDefinition" TargetType="RowDefinition">
        <Setter Property="Height" Value="*" />
    </Style>
    <Style x:Key="AutoHeightRowDefinition" TargetType="RowDefinition">
        <Setter Property="Height" Value="Auto" />
    </Style>
    <Style x:Key="MicroHeightRowDefinition" TargetType="RowDefinition">
        <Setter Property="Height" Value="5" />
    </Style>
    <Style x:Key="MinWidthColumnDefinition" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="10" />
    </Style>
    <Style x:Key="AutoWidthColumnDefinition" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="Auto" />
    </Style>
    <Style x:Key="MaxWidthColumnDefinition" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="*" />
    </Style>
</ResourceDictionary>